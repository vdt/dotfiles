set ttytype=xterm-color

set incsearch

set autoindent
set expandtab
set tabstop=4
set shiftwidth=4

set nobackup
set nowritebackup

set splitright
set autowrite
set backspace=2

filetype on
filetype plugin on
syntax enable

set pastetoggle=<F7>

" Python syntax options
let python_highlight_all = 1
